<%= form_with(model: bizcase, local: true,class:'form-horizontal') do |form| %>
  <% if bizcase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bizcase.errors.count, "error") %> prohibited this bizcase from being saved:</h2>

      <ul>
      <% bizcase.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
     

               <div class="form-group"><label class="col-sm-2 control-label">标题 </label>
                  <div class="col-sm-10">
                    <%= form.text_field :bizcase_title, class:'form-control' %>
                  </div>
                </div>
                 <div class="hr-line-dashed"></div>

                <div class="form-group"><label class="col-sm-2 control-label">链接 </label>
                  <div class="col-sm-10"><%= form.text_field :bizcase_link, class:'form-control' %> </div>
                </div>
                <div class="hr-line-dashed"></div>
                 <div class="form-group"><label class="col-sm-2 control-label">阅读量</label>
                  <div class="col-sm-10"><%= form.text_field :readed, class:'form-control'  %> </div>
                </div>
                <div class="hr-line-dashed"></div>
                 <div class="form-group"><label class="col-sm-2 control-label">描述</label>
                  <div class="col-sm-10"><%= form.text_field :bizcase_content, class:'form-control' %> </div>
                </div>
                 
                  <div class="hr-line-dashed"></div>
                      <div class="form-group">
                        <label class="col-sm-2 control-label">上传图片</label>
                        <div class="col-sm-10">
                          <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="form-control" data-trigger="fileinput">
                              <i class="glyphicon glyphicon-file fileinput-exists"></i>
                              <span class="fileinput-filename"></span>
                            </div>
                            <span class="input-group-addon btn btn-default btn-file">
                              <span class="fileinput-new">选择图片</span>
                              <span class="fileinput-exists">修改</span>
                              
                               <%= form.file_field :bizcase_img%>
                            </span>
                            <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">删除</a>
                          </div>
                        </div>
                      </div>
                    <div class="hr-line-dashed"></div>  
                  <%= form.hidden_field :bizcase_author,:value =>session['user_id']%>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-2">
                       <%= form.submit '保存',class:'btn btn-primary'%>
                    </div>
                </div>          
    <% end %>



